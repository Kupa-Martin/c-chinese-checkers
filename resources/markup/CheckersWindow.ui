<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="CheckersWindow" parent="GtkWindow">
        <style>
            <class name="checkers-window"></class>
        </style>
        <child>
            <object class="GtkOverlay" id="overlay">
                <child>
                    <object class="GtkBox">
                        <child>
                            <object class="GtkBox" id="sidebar">
                                <property name="name">sidebar</property>
                                <property name="halign">start</property>
                                <property name="orientation">vertical</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="name">sidebar-label</property>
                                        <property name="label">Select player count</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <child>
                                            <object class="GtkToggleButton" id="player_select2">
                                                <binding name="sensitive">
                                                    <closure type="gboolean" function="checkers_window_closure_player_select">
                                                        <lookup type="CheckersBoard" name="game-active">board</lookup>
                                                    </closure>
                                                </binding>
                                                <property name="label">2 players</property>
                                                <property name="active">true</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton" id="player_select4">
                                                <binding name="sensitive">
                                                    <closure type="gboolean" function="checkers_window_closure_player_select">
                                                        <lookup type="CheckersBoard" name="game-active">board</lookup>
                                                    </closure>
                                                </binding>
                                                <property name="group">player_select2</property>
                                                <property name="label">4 players</property> 
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkToggleButton" id="player_select6">
                                                <binding name="sensitive">
                                                    <closure type="gboolean" function="checkers_window_closure_player_select">
                                                        <lookup type="CheckersBoard" name="game-active">board</lookup>
                                                    </closure>
                                                </binding>
                                                <property name="group">player_select2</property>
                                                <property name="label">6 players</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton" id="button1">
                                        <property name="label">Start</property>
                                        <property name="valign">end</property>
                                        <property name="vexpand">true</property>
                                        <signal name="clicked" handler="checkers_window_handle_button1_clicked"></signal>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="CheckersBoard" id="board">
                                <property name="slot-radius">38</property>
                                <property name="hexpand">true</property>
                                <binding name="players">
                                    <closure type="CheckersBoardPlayers" function="checkers_window_change_board_players">
                                        <lookup type="GtkToggleButton" name="active">player_select2</lookup>
                                        <lookup type="GtkToggleButton" name="active">player_select4</lookup>
                                        <lookup type="GtkToggleButton" name="active">player_select6</lookup>
                                    </closure>
                                </binding>
                            </object>
                        </child>
                    </object>
                </child>
                <child type="overlay">
                    <!-- Use GtkDialog -->
                    <object class="CheckersGameOver">
                        <property name="visible">false</property>
                        <property name="halign">GTK_ALIGN_CENTER</property>
                        <property name="valign">GTK_ALIGN_CENTER</property>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>