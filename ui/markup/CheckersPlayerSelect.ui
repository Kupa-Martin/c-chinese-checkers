<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="CheckersPlayerSelect" parent="GtkBox">
        <style>
            <class name="checkers-player-select"></class>
        </style>

        <!-- Inherited properties -->
        <property name="spacing">10</property>

        <child>
            <object class="GtkButton" id="button1">
                <signal name="clicked" handler="handle_checkers_player_select_clicked_button1"></signal>
                <child>
                    <object class="GtkLabel">
                        <property name="label">2 players</property>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkButton" id="button2">
                <signal name="clicked" handler="handle_checkers_player_select_clicked_button2"></signal>
                <child>
                    <object class="GtkLabel">
                        <property name="label">4 players</property>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkButton" id="button3">
                <signal name="clicked" handler="handle_checkers_player_select_clicked_button3"></signal>
                <child>
                    <object class="GtkLabel">
                        <property name="label">6 players</property>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>